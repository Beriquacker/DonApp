<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/articulo_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del artículo" />

    <EditText
        android:id="@+id/articulo_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del artículo" />

    <EditText
        android:id="@+id/articulo_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado del artículo" />

    <Button
        android:id="@+id/boton_subir_articulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir artículo" />

</LinearLayout>
